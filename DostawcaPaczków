public class DostawcaPaczków {
	
	int paczki_ok_1;
	int paczki_ok_2;
	
	static int ilosc_paczkow;
	
	public DostawcaPaczków(int paczki_ok_1, int paczki_ok_2)
	{
		this.paczki_ok_1 = paczki_ok_1;
		this.paczki_ok_2 = paczki_ok_2;
		System.out.println("Dodano pączki dla okienka 1 = " + paczki_ok_1);
		System.out.println("Dodano pączki dla okienka 2 = " + paczki_ok_2);
	}
	
	private void infoPaczek(String text)
	{
		System.out.println("INFO PACZKI: " + text);
	}
	
