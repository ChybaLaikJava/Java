	public void paczki_ok_1()
	{
		ProgramGlowny.ilosc_paczkow = paczki_ok_1;
		
		if(paczki_ok_1 >= 1)
		{
			infoPaczek(  " pozostało " + paczki_ok_1 + " paczków");
			paczki_ok_1--;
		}
		else if (paczki_ok_1 < 0)
		{
			infoPaczek(" NIEMA PACZKÓW, NIE MA PACzKÓW");
		}		
	}
	
	public void paczki_ok_2()
	{
		ProgramGlowny.ilosc_paczkow = paczki_ok_2;
		
		if(paczki_ok_2 >= 1)
		{
			infoPaczek(  " pozostało " + paczki_ok_2 + " paczków");
			paczki_ok_2--;
		}
		else if (paczki_ok_2<0)
		{
			infoPaczek(" NIEMA PACZKÓW, NIE MA PACzKÓW");
		}
	}
